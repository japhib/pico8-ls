{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"es2020"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"rootDir": "src",
		"sourceMap": true
	},
	"include": [
		"./src/**/*"
	]
}